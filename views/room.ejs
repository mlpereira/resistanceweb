<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Resistance Web</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
  </head>
  <body>
    <h1>Room <%= room.id %></h1>

    <% if (!player) { %>
      <form action=<%= room.id + "/joinRoom" %> method="post">
        <label for="name">Your name:&nbsp;&nbsp;&nbsp;</label>
        <input type="text" placeholder="My Name" name="username" />
        <button type="submit">Join Room</button>
      </form>
    <% } %>


    <h2>Participants(<%= Object.keys(room.players).length %>): %></h2>
    <ul>
    <% for (var key in room.players) { %>
        <li><%= room.players[key].name %></li>
    <% } %>
    </ul>
    <% if (player && player.id == room.owner) { %>
      <form action=<%= room.id + "/startGame" %> method="post">
        <button type="submit">Start Game</button>
      </form>
    <% } %>

  </body>
</html>
